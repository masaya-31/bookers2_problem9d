<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.tag, tag_searches_search_path(word: book.tag) %></td>
        <td id="favorite_buttons_<%= book.id %>" ><%= render "favorites/favorite", book: book %></td>
        <td>コメント数：<span id="comment_count"><%= book.book_comments.count %></span></td>
        <td><%= render "books/star", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>